//			if (delta >= 1) {
//				update();
//				repaint();
//				delta--;
//				drawCount++;
//			}
//			
//			if (time >= 1000000000) {
//				System.out.println("FPS: " + drawCount);
//				drawCount = 0;
//				time = 0;
//			}
//		}
//	}
	
	public void update() {
		player.update();
	}
	
	public void paintComponent(Graphics g) {
		
		super.paintComponent(g);
		
		Graphics2D g2 = (Graphics2D)g;
		
		player.draw(g2);
		
		g2.dispose(); // Good practice to save some memories, release any resources it uses
	}
}
